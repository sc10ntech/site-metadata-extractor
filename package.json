{
  "name": "site-metadata-extractor",
  "version": "1.0.7",
  "description": "web(site) resource metadata extractor",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "collectCoverage": "jest --collectCoverage",
    "format": "prettier --write \"src/*.{js,ts,json,md}\"",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sc10ntech/site-metadata-extractor.git"
  },
  "keywords": [
    "web",
    "seo",
    "metadata",
    "open-graph-protocol",
    "schema.org",
    "structured-data"
  ],
  "author": "info@sc10n.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sc10ntech/site-metadata-extractor/issues"
  },
  "homepage": "https://github.com/sc10ntech/site-metadata-extractor#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "dompurify": "^3.0.2",
    "is-absolute-url": "^4.0.1",
    "lodash": "^4.17.20",
    "schema-dts": "^1.1.0",
    "validator": "^13.1.17",
    "xregexp": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/cheerio": "^0.22.14",
    "@types/dompurify": "3.2.0",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^22.7.6",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.2",
    "esm": "^3.2.25",
    "html-minifier": "^4.0.0",
    "husky": "^9.1.4",
    "jest": "^29.3.1",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.1",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.28.1",
    "typescript": "^5.0.4"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true
  }
}
