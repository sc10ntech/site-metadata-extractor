{
  "name": "extract-link-metadata",
  "version": "1.0.0",
  "description": "web resource metadata extractor",
  "main": "index.ts",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint src/**/*.ts",
    "test": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collinwu/extract-link-metadata.git"
  },
  "keywords": [
    "web",
    "seo",
    "metadata",
    "open-graph-protocol",
    "schema.org",
    "structured-data"
  ],
  "author": "collinwu@gmail.com",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/collinwu/extract-link-metadata/issues"
  },
  "homepage": "https://github.com/collinwu/extract-link-metadata#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "dompurify": "^1.0.11",
    "is-absolute-url": "^3.0.1",
    "lodash": "^4.17.15",
    "validator": "^11.1.0",
    "xregexp": "^4.2.4"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/dompurify": "0.0.33",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.137",
    "@types/node": "^12.7.2",
    "@types/validator": "^10.11.3",
    "@types/xregexp": "^3.0.30",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "typescript": "^3.7.0-beta"
  },
  "eslintConfig": {
    "env": {
      "protractor": true
    },
    "extends": [
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "array-bracket-spacing": "error",
      "new-cap": "off",
      "prettier/prettier": "error",
      "sort-keys": "off",
      "space-infix-ops": "error"
    }
  },
  "eslintIgnore": [
    "/build",
    "/docs",
    "/node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  }
}
